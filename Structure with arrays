void accept(struct exam e[100],int n)
{
    int i;
    for(i=0;i<n;i++)
    {
        printf("\n enter the student %d id",i+1);
        scanf("%d",&e[i].id);
        printf("\n enter the student %d name",i+1);
        scanf("%s",e[i].name);
        printf("enter the subject %d subject",i+1);
        scanf("%s",e[i].subject);
        printf("\n enter student mark",i+1);
        scanf("%lf",&e[i].marks);
    }
}
